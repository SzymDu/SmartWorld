    <div class="form-group">
    <input type="text" class="form-control" name="phone[image]" value= "<%= phone.image%>"></input>
   </div>
  
    <div class="form-group">
        <input type="text" class="form-control" name="phone[description]" value= "<%= phone.desc%>"></input>
 
    </div>
     <div class="form-group">
    <input class="btn btn-lg btn-primary btn-block" type="submit"></input>
    </div>
</form>  
</div>
</div>
