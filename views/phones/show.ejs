                <% phone.comments.forEach(function(comment){%>
                    <div class="row">
                        <div class="col-md-12">
                           <strong>  <%= comment.author.username %></strong>
                             <span class="pull-right">10 days ago</span>
                                <p> <%= comment.text %></p>
                        </div>
                    </div>
     
        <% }) %>

</div>
